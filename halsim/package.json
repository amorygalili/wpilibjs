{
  "name": "halsim-ts",
  "version": "0.1.0",
  "description": "Simulation-only version of the WPILib Hardware Abstraction Layer (HAL) in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "prepare": "npm run build",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "example:simple": "ts-node examples/simple-robot.ts",
    "example:server": "ts-node examples/websocket-server.ts"
  },
  "keywords": [
    "wpilib",
    "hal",
    "simulation",
    "robotics",
    "frc"
  ],
  "author": "WPILib Team",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/wpilibsuite/halsim-ts.git"
  },
  "bugs": {
    "url": "https://github.com/wpilibsuite/halsim-ts/issues"
  },
  "homepage": "https://github.com/wpilibsuite/halsim-ts#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.6",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
